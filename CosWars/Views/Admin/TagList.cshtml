@model IEnumerable<CosWars.Models.Etiket>

@{
    ViewBag.Title = "Tag List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Assets/plugins/datatables/dataTables.bootstrap.css">
}
@section Scripts{
    <!-- DataTables -->
    <script src="/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- page script -->
    <script>
      $(function () {
          $("#example").DataTable({
              "order": [[0, "desc"]]
          });
      });
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Data Tables
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><a href="@Url.Action("AddTag", "Admin")" class="btn btn-block btn-primary"><i class="fa fa-plus"></i> Add New Tag</a></h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Connected Cosplay</th>
                                <th>Order</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Adi</td>
                                        <td>
                                            @if (item.AktifMi == true)
                                            {
                                                @Html.Raw("<span style='color: green'>Active</span>")
                                            }
                                            else
                                            {
                                                @Html.Raw("<span style='color: red'>Passive</span>")
                                            }
                                        </td>
                                        <td>@item.Cosplay.Count()</td>
                                        <td>@item.Sira</td>
                                        <td>
                                            <div class="btn-group">
                                              <button type="button" class="btn btn-info">Action</button>
                                              <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                              </button>
                                              <ul class="dropdown-menu" role="menu">
                                                 <li>@Html.ActionLink("Edit", "EditTag", new { id = item.ID })</li>
                                                <li class="divider"></li>
                                                <li>@Html.ActionLink("Delete", "DeleteTag", "Admin", new { id = item.ID }, new { onclick = "return confirm('Are you sure?');" })</li>
                                              </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Connected Cosplay</th>
                                <th>Order</th>
                                <th>&nbsp;</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->