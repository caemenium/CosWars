@model CosWars.Models.Cosplay[]

@{
    Layout = null;
}
<div id="preloader" style="display: none; position: absolute; width: 100%; height: 100%; background-color: rgba(128, 128, 128, 0.90)"></div>

<div class="row">
    @if (Model.Length > 0)
    {
        for (int i = 0; i < Model.Length; i++)
        {
            <div class="col-md-5">
                <a id="Vote" href="@Url.Action("Vote", "Home", new { id = Model[i].ID })">
                    <img src="@Model[i].ResimYolu" alt="@Model[i].Adi" width="300" height="300" />
                </a>
            </div>
            if (i == 0)
            {
                <div class="col-md-2">VERSUS</div>
            }
        }
    }
</div>
<script src="~/Assets/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script>
    //$(document).ready(function () {
    //    $("#preloader").hide();
    //});

    $(function () {
        $("[id=Vote]").on("click", function () {
            document.getElementById("preloader").style.display = 'block';
        });
    });

</script>